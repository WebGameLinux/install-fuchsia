executable("sparser") {
  sources = [
    "sparse.c"
  ]

  deps = [
    "//apps/install-fuchsia/lib:sparse"
  ]
}

group("sparser_host") {
  deps = [
    ":sparser(//build/toolchain:host_x64)"
  ]
}

executable("install-fuchsia") {
  sources = [
    "install-fuchsia.c"
  ]

  libs = [
    "fs-management",
    "magenta"
  ]

  deps = [
    "//apps/install-fuchsia/lib",
    "//magenta/system/ulib/gpt",
    "//magenta/third_party/ulib/lz4",
    "//apps/install-fuchsia/lib:sparse",
  ]
}
